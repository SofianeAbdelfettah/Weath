<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c6000000"
    android:padding="@dimen/widget_margin">

    <ImageView
        android:id="@+id/picwidget"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/test"
        android:layout_gravity="left|top"
        android:paddingTop="10dp"
        android:paddingLeft="10dp" />

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="121dp"
        android:layout_gravity="right|top"
        android:textSize="45dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:paddingTop="20dp"
        android:paddingRight="10dp" />

    <TextView
        android:id="@+id/ville"
        android:layout_width="278dp"
        android:layout_height="64dp"
        android:layout_gravity="center|center_vertical"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:text="qdsdsqdsqdsq"
        android:paddingLeft="60dp"
        android:textStyle="bold"
        android:paddingTop="15dp" />

    <TextView
        android:id="@+id/vent"
        android:layout_width="317dp"
        android:layout_height="111dp"
        android:textSize="20sp"
        android:layout_gravity="left|center_vertical"
        android:textColor="#ffffff"
        android:paddingTop="85dp"
        android:text="sqdqdssqddqs"
        android:paddingLeft="20dp" />

    <TextView
        android:id="@+id/humide"
        android:layout_width="245dp"
        android:layout_height="161dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/widgetemps"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="italic"
        android:layout_gravity="left|center_vertical"
        android:paddingTop="130dp"
        android:text="qdsdsqdsqdsq"
        android:paddingLeft="20dp" />

    <TextView
        android:id="@+id/msgmarrant"
        android:layout_width="245dp"
        android:layout_height="218dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/widgetemps"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="italic"
        android:layout_gravity="left|center_vertical"
        android:paddingTop="178dp"
        android:text="qdsdsqdsqdsq"
        android:paddingLeft="20dp" />

    <TextView
        android:id="@+id/temps"
        android:layout_width="97dp"
        android:layout_height="176dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:layout_gravity="right|top"
        android:textIsSelectable="false"
        android:text="17°C"

        android:paddingLeft="20dp"
        android:paddingTop="70dp" />

    <TextView
        android:id="@+id/état"
        android:layout_width="128dp"
        android:layout_height="146dp"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_gravity="right|top"
        android:text="Nuageux"
        android:paddingTop="100dp"
        android:paddingLeft="35dp" />
</FrameLayout>